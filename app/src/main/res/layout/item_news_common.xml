<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/touch_bg_selector">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1月1日  星期一"
        android:padding="5dp"
        android:background="@color/common_touch_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:foreground="@drawable/iv_touch_bg_selector">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="只属于你的单马尾"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="13sp"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_author"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/home_menu_0"/>

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="只属于你的单马尾"
                    android:textSize="12sp"
                    android:maxLength="8"
                    android:ellipsize="end"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_flower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ee"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/icon_news_details_oraise_two"/>

                <TextView
                    android:id="@+id/tv_discussion_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ee"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/icon_comment_message"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>