<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="10dp"
    android:background="@drawable/touch_bg_selector">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:foreground="@drawable/iv_touch_bg_selector">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_toEndOf="@id/frameLayout"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只属于你的单马尾"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ww"
            android:drawableStart="@drawable/img_icon_head"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ww"
            android:drawableStart="@drawable/img_icon_tag"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ww"
            android:drawableStart="@drawable/img_icon_clock"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_last_update_chapter_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/tv_update_chapter_name_selector"
        android:background="@android:color/transparent"
        android:drawablePadding="3dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="全一话"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>