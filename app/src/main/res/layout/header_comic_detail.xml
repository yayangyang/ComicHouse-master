<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        android:background="@drawable/img_work_instru_bac">
        
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="105dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/iv_cover"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_icon_head"
                android:text="xx"
                android:drawablePadding="10dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_icon_tag"
                android:text="xx"
                android:drawablePadding="10dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_icon_tag"
                android:text="xx"
                android:drawablePadding="10dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_icon_tag"
                android:text="xx"
                android:drawablePadding="10dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_icon_clock"
                android:text="xx"
                android:drawablePadding="10dp"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_subscribe_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消订阅"
                    android:padding="10dp"
                    android:background="@drawable/bg_subscribe_choice"
                    android:textColor="@color/tv_comic_detail_selector"/>

                <TextView
                    android:id="@+id/tv_read_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始阅读"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_read_state"
                    android:textColor="@color/tv_comic_detail_selector"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/common_bg"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/rb_works_introduce"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="作品介绍"
                android:button="@null"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/rb_works_announcement"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="作品公告"
                android:button="@null"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/rb_author_announcement"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="作品介绍"
                android:button="@null"
                android:gravity="center"/>

        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxx"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/iv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_open_btn"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_description"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_relevant_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关内容"
                android:drawableStart="@drawable/img_about_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:drawableStart="@drawable/img_share_icon"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_comic_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="漫画章节"
            android:textColor="@android:color/black"/>

        <RadioGroup
            android:id="@+id/rg_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:id="@+id/rb_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正序"
                android:button="@null"
                android:drawableEnd="@drawable/img_up_selector"
                android:layout_marginEnd="10dp"
                android:textColor="@color/tv_common_selector"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rb_reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒序"
                android:button="@null"
                android:drawableEnd="@drawable/img_down_selector"
                android:textColor="@color/tv_common_selector"/>

        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连载"
            android:layout_gravity="center_horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作品讨论"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>