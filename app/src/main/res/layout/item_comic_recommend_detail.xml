<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/fr_normal"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/iv_touch_bg_selector">

        <ImageView
            android:id="@+id/iv_cover_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fr_big"
        android:layout_width="@dimen/grid_two_width"
        android:layout_height="@dimen/grid_two_height"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/iv_touch_bg_selector"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_cover_big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/common_tv"
        tools:text="女朋友、借我一下"
        android:textColor="@android:color/black"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_author"
        style="@style/common_tv"
        tools:text="宫岛礼吏"
        android:textSize="12sp"/>

</LinearLayout>
